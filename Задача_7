def selection_sort(arr):
    n = len(arr)

    for i in range(n):
        min_index = i

        # Ищем минимальный элемент в неотсортированной части
        for j in range(i + 1, n):
            if arr[j] < arr[min_index]:
                min_index = j

        # Ставим минимум на текущую позицию
        arr[i], arr[min_index] = arr[min_index], arr[i]
